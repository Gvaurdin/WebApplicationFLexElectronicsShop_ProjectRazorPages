@page
@model FLexElectronicsShop.Pages.DigitalProducts.DetailsModel
@{
    ViewData["Title"] = "Информация о товаре";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-5">
            <div class="main-img">
                <img class="img-fluid" src="@Model!.Product!.URL" alt="@Model.Product.Name" />
            </div>
        </div>
        <div class="col-md-7">
            <div class="main-description px-2">
                <div class="text-bold">
                    Название : @Model.Product.Name
                </div>
                <div> Описание : @Model.Product.Description</div>
                <span> Стоимость : @Model.Product.Price₽</span>
            </div>
        </div>
    </div>
</div>
