@page
@model FLexElectronicsShop.Pages.UserAccount.RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}
<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>Регистрация аккаунта</h4>
        </p>

        @if (TempData["Error"] != null)
        {
            <div>
                <span><b>Извините</b> - @TempData["Error"]</span>
            </div>
        }
        <div class="row">
            <div class="col-md-8" offset-2>
                <form method="post">
                    <div class="form-date">
                        <label asp-for="@Model.RegisterViewModel.Email"></label>
                        <input asp-for="@Model.RegisterViewModel.Email" />
                    </div>
                    <div class="form-date">
                        <label asp-for="@Model.RegisterViewModel.Password"></label>
                        <input asp-for="@Model.RegisterViewModel.Password" />
                    </div>
                    <div class="form-date">
                        <label asp-for="@Model.RegisterViewModel.ConfirmPassword"></label>
                        <input asp-for="@Model.RegisterViewModel.ConfirmPassword" />
                    </div>
                    <input type="submit" value="Зарегистрироваться" />
                </form>
            </div>
        </div>
    </div>
</div>
